{
  "env": {
    "test": {
      "plugins": [
        ['@babel/plugin-transform-runtime', {
          regenerator: true
        }]
      ],
      "presets": [
        [
          "@babel/preset-env",
          { "modules": "umd" }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "@babel/preset-env",
          { "modules": false }
        ]
      ]
    }
  },
  "ignore": [
    "node_modules/**",
    "*.test.js"
  ]
}
